		Scanner scan6 = new Scanner(mysteryList);
		while(scan6.hasNext() == true){
			String movie = scan6.next();
			MysteryArray.add(movie);}
	}
	
	public void Romance()throws IOException{
		ArrayList<String> RomanceArray = new ArrayList<String>();
